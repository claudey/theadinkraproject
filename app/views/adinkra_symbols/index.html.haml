<p id="notice"><%= notice %></p>

<h1>Adinkra Symbols</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Icon png</th>
      <th>Icon svg</th>
      <th>Translation</th>
      <th>Meaning</th>
      <th>Origin</th>
      <th>Proverb</th>
      <th>Theme</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adinkra_symbols.each do |adinkra_symbol| %>
      <tr>
        <td><%= adinkra_symbol.name %></td>
        <td><%= adinkra_symbol.icon_png %></td>
        <td><%= adinkra_symbol.icon_svg %></td>
        <td><%= adinkra_symbol.translation %></td>
        <td><%= adinkra_symbol.meaning %></td>
        <td><%= adinkra_symbol.origin %></td>
        <td><%= adinkra_symbol.proverb %></td>
        <td><%= adinkra_symbol.theme %></td>
        <td><%= link_to 'Show', adinkra_symbol %></td>
        <td><%= link_to 'Edit', edit_adinkra_symbol_path(adinkra_symbol) %></td>
        <td><%= link_to 'Destroy', adinkra_symbol, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Adinkra Symbol', new_adinkra_symbol_path %>
